      SOURCE_URL=https://gitlab.freedesktop.org/$MODULE/$MODULE/-/archive/$VERSION/
      SOURCE_VFY=sha256:c5169568f337c4a3bda927c42afef3a9d4c891e48a405cba39d57cb4631b9fb0
