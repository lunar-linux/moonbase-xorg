           MODULE=mesa-lib
          VERSION=10.0.0
           SOURCE=MesaLib-$VERSION.tar.bz2
 SOURCE_DIRECTORY=$BUILD_DIRECTORY/Mesa-$VERSION
       SOURCE_URL=ftp://ftp.freedesktop.org/pub/mesa/${VERSION%.*}
