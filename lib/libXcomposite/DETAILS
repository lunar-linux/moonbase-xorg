          MODULE=libXcomposite
         VERSION=0.4.4
          SOURCE=$MODULE-$VERSION.tar.bz2
      SOURCE_URL=$XORG_URL/individual/lib
      SOURCE_VFY=sha1:75fd0b996e56e12db1d84e9b63549c5c3f2631ca
