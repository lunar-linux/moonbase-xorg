mquery ENABLE_SETUID "Enable setuid (run as root)?" y "" "--disable-install-setuid"
mquery ENABLE_IPV6   "Enable IPv6?" y "" "--disable-ipv6"
mquery ENABLE_IPV4   "Enable IPv4?" y "" "--disable-tcp-transport"

# Default is n, to match xorg's default
mquery ENABLE_GLX_TLS "Enable glx-tls? (${PROBLEM_COLOR}if y, enable in mesa-lib first${QUERY_COLOR})" n "--enable-glx-tls" "--disable-glx-tls"
